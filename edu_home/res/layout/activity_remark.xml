<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/common_backgroud">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/remark_bg"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/ic_calender"/>

            <TextView
                	android:id="@+id/remark_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333332"
                    android:layout_margin="8dp"
                    android:text="孙小虎"/>
        </FrameLayout>

        <ImageView
                android:background="@drawable/ic_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333332"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:text="签到:"/>

            <TextView
                    android:id="@+id/remark_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:textColor="#333332"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"
                    android:text="备注:"/>

            <EditText
                    android:id="@+id/remark_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:hint="添加"
                    android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <include
            android:layout_weight="0"
            layout="@layout/comment_publisher"/>

</LinearLayout>