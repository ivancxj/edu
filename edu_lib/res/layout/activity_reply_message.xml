<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_backgroud"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message_time"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="2013-03-04 12:12:12"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" 
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/message_content"
                    style="@style/ChattingUIText"
                    android:background="@drawable/ic_pop_left"
                    android:maxWidth="400dp"
                    android:minHeight="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:background="@drawable/input_content_bg"
                android:padding="8dp" >

                <EditText
                    android:id="@+id/message_edit_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg"
                    android:gravity="top"
                    android:lines="4"
                    android:maxLength="70"
                    android:minHeight="120dp" >

                    <requestFocus />
                </EditText>

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0" >

                    <TextView
                        android:id="@+id/message_reply_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="70/70"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/message_send"
                        style="@style/btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/btn_bottom"
                        android:onClick="onClick"
                        android:text="发送" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>