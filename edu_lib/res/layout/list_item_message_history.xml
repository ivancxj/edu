<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/message_time"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="2013-03-04 12:12:12"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_content_left"
            style="@style/ChattingUIText"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_pop_left"
            android:maxWidth="400dp"
            android:minHeight="50dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_alignParentLeft="true"
             />

        <TextView
            android:id="@+id/message_content_right"
            style="@style/ChattingUIText"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_pop_right"
            android:maxWidth="400dp"
            android:minHeight="50dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" 
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>