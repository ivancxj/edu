<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="whitewithshadow">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>

    <style name="messageListView" parent="ListViewAppTheme">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@drawable/list_divider_default</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <style name="ChattingUIText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">240.0dip</item>
        <item name="android:minHeight">15.0dip</item>
        <item name="android:lineSpacingExtra">2.0dip</item>
    </style>

    <style name="btn">

        <!-- <item name="android:background">@color/window_background</item> -->
        <item name="android:background">@drawable/mm_text_bg_trans</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyListView" parent="android:Widget.ListView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:divider">@drawable/line</item>
        <item name="android:background">@drawable/list_bg</item>
    </style>

</resources>