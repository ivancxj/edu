<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView
            	android:id="@+id/remark_status"
                android:text="签到"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_ok"
                android:paddingRight="8dp"
                android:drawablePadding="4dp"
                android:layout_weight="0"/>

        <TextView
            	android:id="@+id/remark_num"
                android:text="0210"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                />

        <TextView
            	android:id="@+id/remark_name"
                android:text="孙小莉"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

        <TextView
            	android:id="@+id/remark_time"
                android:text="08:30"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <ImageView
            	android:id="@+id/remark_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                />
    </LinearLayout>


    <TextView
        	android:id="@+id/remark_message"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:paddingTop="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:text="孙小力请假今天感冒发烧"
            android:visibility="gone"
            android:background="@drawable/text_bg"/>

</LinearLayout>